<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="button_style">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="icon_style">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">@dimen/activity_main_margin_start_icon</item>
    </style>

    <style name="title_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/activity_main_color_blue</item>
        <item name="android:textSize">@dimen/activity_main_textSize_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="result_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/activity_main_marginBottom_result</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/activity_main_color_blue</item>
        <item name="android:gravity">end|bottom</item>
        <item name="android:textSize">@dimen/activity_main_textSize_result</item>
    </style>

</resources>